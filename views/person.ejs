<div id="container">


    <% fuzzies.forEach(function(fuzzy, index){ %>
  
              <div class="sticky">
                    <p> Dear <%= person %>, </p>
                    <br />

                    <p> <%= fuzzy.text %>  </p> <br />

                    <div class="sticky-signature">
                      <p> Love, </p> 
                      <br />
